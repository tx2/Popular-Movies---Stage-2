<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selector">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="@dimen/play_button_width"
            android:layout_height="@dimen/play_button_width"
            android:background="@drawable/ic_play"
            android:contentDescription="@string/play_image_content_description"
            android:layout_marginStart="@dimen/play_button_margin_start"
            android:layout_marginLeft="@dimen/play_button_margin_start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_trailer_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            tools:text="@string/mock_trailer_item_title"
            app:layout_constraintBottom_toBottomOf="@+id/iv_play"
            app:layout_constraintLeft_toRightOf="@+id/iv_play"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_play" />

    </android.support.constraint.ConstraintLayout>
</layout>